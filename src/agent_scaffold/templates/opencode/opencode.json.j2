{
  "$schema": "https://opencode.ai/config.json"
  {%- if instructions %},
  "instructions": [
    {%- for pattern in instructions %}
    "{{ pattern }}"{{ "," if not loop.last else "" }}
    {%- endfor %}
  ]
  {%- endif %}
  {%- if agents %}
  {%- for agent in agents %},
  "agent.{{ agent.id }}": {
    {%- if agent.prompt_file %}
    "prompt": {
      "file": "./{{ agent.prompt_file }}"
    }
    {%- endif %}
    {%- if agent.model %}{{ "," if agent.prompt_file else "" }}
    "model": "{{ agent.model }}"
    {%- endif %}
    {%- if agent.mode %}{{ "," if agent.prompt_file or agent.model else "" }}
    "mode": "{{ agent.mode }}"
    {%- endif %}
    {%- if agent.temperature is not none %}{{ "," if agent.prompt_file or agent.model or agent.mode else "" }}
    "temperature": {{ agent.temperature }}
    {%- endif %}
    {%- if agent.steps is not none %}{{ "," if agent.prompt_file or agent.model or agent.mode or agent.temperature is not none else "" }}
    "steps": {{ agent.steps }}
    {%- endif %}
  }
  {%- endfor %}
  {%- endif %}
}
